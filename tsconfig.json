{
  "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es2019",
      "esModuleInterop": true,
      "allowJs": true,
      "strictNullChecks": true,
      "baseUrl": ".",
      "paths": {
        "@controllers/*": ["./src/controllers/*"],
        "@repositories/*": ["./src/repositories/*"],
        "@models": ["./src/models/*"],
        "@config": ["./src/config/*"]
      }
  }
}
